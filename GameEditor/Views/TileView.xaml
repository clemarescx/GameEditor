<UserControl x:Class="GameEditor.Views.TileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GameEditor.Views"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <Image Name="TerrainSprite"
               Height="auto"
               Width="100%"
               Source="{Binding (DependencyProperty.terrainFilePath)}" />
        <Image Name="WalkableSprite"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Width="100%"
               Visibility="{Binding IsPortal}"
               Source="../Resources/tiles/logic/trigger_portal.png" />
        <Image Name="SpawnSprite"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Height="50%"
               Width="50%"
               Visibility="{Binding IsSpawn}"
               Source="../Resources/tiles/logic/spawn_player.png" />
    </Grid>
</UserControl>